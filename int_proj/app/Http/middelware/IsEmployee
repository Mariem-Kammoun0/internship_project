<?php
namespace App\Http\Middleware;

use Closure;
use Illuminate\Http\Request;

class IsEmployee
{
    public function handle(Request $request, Closure $next)
    {
        if ($request->user()->role !== 'employee') {
            return response()->json(['message' => 'Forbidden'], 403);
        }

        return $next($request);
    }
}
